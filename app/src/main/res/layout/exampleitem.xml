<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    android:background="#9400D3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bda0cb">

        <TextView
            android:id="@+id/examplename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="NAME"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textviewtittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examplename"
            android:layout_marginLeft="10dp"
            android:text="Tittle"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textviewdesription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewtittle"
            android:layout_marginTop="-4dp"
            android:text="Description"
            android:layout_marginStart="10dp"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>